<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/horizontalScrollView" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
        android:layout_width="130dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/palabra1Actividad2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="130dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/palabra2Actividad2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/palabra1Actividad2"
        android:layout_toEndOf="@+id/palabra1Actividad2"
        android:layout_marginLeft="10dp" />

    <TextView
        android:textStyle="bold"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/palabra3Actividad2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/palabra2Actividad2"
        android:layout_toEndOf="@+id/palabra2Actividad2"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/palabra4Actividad2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/palabra3Actividad2"
        android:layout_toEndOf="@+id/palabra3Actividad2"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/palabra5Actividad2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/palabra4Actividad2"
        android:layout_toEndOf="@+id/palabra4Actividad2"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/palabra6Actividad2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/palabra5Actividad2"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

        <TextView
        android:layout_width="130dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/espacio2Actividad2"
        android:layout_alignTop="@+id/espacio1Actividad2"
        android:layout_toRightOf="@+id/espacio1Actividad2"
        android:layout_toEndOf="@+id/espacio1Actividad2"
            android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="130dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/espacio3Actividad2"
        android:layout_alignTop="@+id/espacio2Actividad2"
        android:layout_toRightOf="@+id/espacio2Actividad2"
        android:layout_toEndOf="@+id/espacio2Actividad2"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="130dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/espacio4Actividad2"
        android:layout_alignTop="@+id/espacio3Actividad2"
        android:layout_toRightOf="@+id/espacio3Actividad2"
        android:layout_toEndOf="@+id/espacio3Actividad2"
        android:layout_marginLeft="15dp" />

        <TextView
        android:layout_width="130dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/espacio6Actividad2"
        android:layout_alignTop="@+id/espacio5Actividad2"
        android:layout_toRightOf="@+id/espacio5Actividad2"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="130dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@drawable/borde"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/espacio5Actividad2"
            android:layout_below="@+id/espacio2Actividad2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/espacio1Actividad2"
            android:background="@drawable/borde"
            android:textStyle="bold"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/palabra1Actividad2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Check"
            android:id="@+id/btnCheck"
            android:background="@drawable/btn_selector"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/palabra3Actividad2"
            android:layout_alignEnd="@+id/palabra3Actividad2"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp" />
    </RelativeLayout>
   </HorizontalScrollView>

</RelativeLayout>
